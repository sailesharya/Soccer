<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
            <param-name>leagues-file</param-name>
            <param-value>/WEB-INF/data/leagues.txt</param-value>
    </context-param>
    <listener>
        <listener-class>web.InitializeLeagues</listener-class>
    </listener>
    <servlet>
        <servlet-name>AddLeagueServlet</servlet-name>
        <servlet-class>controller.AddLeagueServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddLeague2Servlet</servlet-name>
        <servlet-class>controller.AddLeague2Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddLeagueFormServlet</servlet-name>
        <servlet-class>controller.AddLeagueFormServlet</servlet-class>
        <init-param>
            <param-name>seasons-list</param-name>
            <param-value>Spring,Summer,Fall,Christmas</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>ErrorPageServlet</servlet-name>
        <servlet-class>controller.ErrorPageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SucessServlet</servlet-name>
        <servlet-class>controller.SucessServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListLeaguesServlet</servlet-name>
        <servlet-class>controller.ListLeaguesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InitializeLeagues</servlet-name>
        <servlet-class>web.InitializeLeagues</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>League</servlet-name>
        <servlet-class>model.League</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddLeagueServlet</servlet-name>
        <url-pattern>/AddLeagueServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddLeague2Servlet</servlet-name>
        <url-pattern>/AddLeague2Servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddLeagueFormServlet</servlet-name>
        <url-pattern>/AddLeagueFormServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ErrorPageServlet</servlet-name>
        <url-pattern>/ErrorPageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SucessServlet</servlet-name>
        <url-pattern>/SucessServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListLeaguesServlet</servlet-name>
        <url-pattern>/ListLeaguesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InitializeLeagues</servlet-name>
        <url-pattern>/InitializeLeagues</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>League</servlet-name>
        <url-pattern>/League</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
